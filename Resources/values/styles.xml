<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="AppTheme" parent="MainTheme.Base">
  </style>
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#2196F3</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#1976D2</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#C0C0C0</item>
    <item name="colorControlNormal">#FFFFFFFF</item>"
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="VerticalSpacerStyle">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  <style name="HorizontalSpacerStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">20dp</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>

  <style name="ImageButtonStyle">
    <item name="android:background">@color/material_grey_300</item>
    <item name="android:clickable">true</item>
    <item name="android:textAlignment">center</item>
  </style>
  <style name="TileButtonStyle" parent="ImageButtonStyle">
    <item name="android:layout_width">500px</item>
    <item name="android:layout_height">500px</item>
  </style>
  <dimen name="std_text_size">24dp</dimen>
  <dimen name="std_grid_padding">10dp</dimen>
  <integer name="main_grid_rows">6</integer>
  <integer name="main_grid_cols">5</integer>
  <integer name="main_grid_max_col">4</integer>
  <integer name="main_grid_max_row">5</integer>
</resources>
