<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="@integer/main_grid_cols"
    android:rowCount="@integer/main_grid_rows">
    <GridLayout
        android:paddingLeft="@dimen/std_grid_padding"
        android:paddingRight="@dimen/std_grid_padding"
        android:paddingTop="@dimen/std_grid_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_row="3"
        android:columnCount="3"
        android:rowCount="1">
        <ImageButton
            android:id="@+id/controllerSettingsButton"
            style="@style/TileButtonStyle"
            android:src="@drawable/controller_settings_button"
            android:layout_column="0"
            android:layout_row="0"/>
        <ImageButton
            android:id="@+id/soundSettingsButton"
            style="@style/TileButtonStyle"
            android:src="@drawable/sound_settings_button"
            android:layout_column="2"
            android:layout_row="0"/>
    </GridLayout>
    <ImageButton
        android:id="@+id/donateButton"
        style="@style/ImageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:src="@drawable/donate_button"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_row="5"/>
</GridLayout>
