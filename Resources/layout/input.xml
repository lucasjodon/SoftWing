<?xml version="1.0" encoding="utf-8" ?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="3"
    android:id="@+id/input">
    <ImageView
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/ic_dpad_down"
        android:background="@android:color/transparent"
        android:id="@+id/d_pad_down" />
    <ImageView
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/ic_dpad_up"
        android:background="@android:color/transparent"
        android:id="@+id/d_pad_up" />
    <ImageView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/ic_dpad_left"
        android:background="@android:color/transparent"
        android:id="@+id/d_pad_left" />
    <ImageView
        android:layout_row="1"
        android:layout_column="2"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/ic_dpad_right"
        android:background="@android:color/transparent"
        android:id="@+id/d_pad_right" />
    <ImageView
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/ic_dpad_center"
        android:background="@android:color/transparent"
        android:id="@+id/d_pad_center" />
</GridLayout>