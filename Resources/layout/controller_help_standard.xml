<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/std_grid_padding"
    android:paddingRight="@dimen/std_grid_padding"
    android:paddingTop="@dimen/std_grid_padding"
    android:id="@+id/controllerHelp">
    <TextView
        android:paddingTop="@dimen/std_grid_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup"
        android:textSize="@dimen/std_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.) Make sure the SoftWingAccessibility service is enabled in your accesibility settings."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.) Open the game you want to play on the cover display."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.) Once the game is open, and any on-screen controls are visible, take a screenshot."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.) Return to the SoftWing app, and open the Controller Settings."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5.) Tap the 'Set Image' button, and select your screenshot from step 3."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.) From here, you can tap any control to select and configure it to a touch input. Unconfigured controls will be highlighted in red."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:paddingTop="@dimen/std_grid_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use"
        android:textSize="@dimen/std_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.) Open the game you want to play on the cover display."
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.) Once the desired game has loaded, open the notification tray and tap the SoftWing notification"
        android:textSize="@dimen/body_text_size"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.) If your wing is not already swiveled open, you may swivel it now. If the process was successful, you should see the SoftWing gamepad open on the second display."
        android:textSize="@dimen/body_text_size"/>
</LinearLayout>
