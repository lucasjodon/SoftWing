<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/soundSettings"
    android:paddingLeft="@dimen/std_grid_padding"
    android:paddingRight="@dimen/std_grid_padding"
    android:paddingTop="@dimen/std_grid_padding"
    android:columnCount="3"
    android:rowCount="3">
    <ImageButton
        android:id="@+id/selectOpenAudioButton"
        style="@style/TileButtonStyle"
        android:src="@drawable/open_sound_button"
        android:layout_column="0"
        android:layout_row="0"/>
    <ImageButton
        android:id="@+id/selectCloseAudioButton"
        style="@style/TileButtonStyle"
        android:src="@drawable/close_sound_button"
        android:layout_column="2"
        android:layout_row="0"/>
    <ImageButton
        android:id="@+id/audioResetButton"
        style="@style/ImageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:src="@drawable/reset_button"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="2"/>
</GridLayout>
